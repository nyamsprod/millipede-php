{
    "name": "millipede/millipede",
    "type" : "library",
    "description" : "millipede the PHP way",
    "keywords": ["millipede"],
    "license": "MIT",
    "homepage" : "http://millipede.io",
    "support": {
        "issues": "https://github.com/getmillipede/millipede-php/issues"
    },
    "require": {
        "php": "^8.1",
        "ext-mbstring" : "*"
    },
    "require-dev": {
        "phpunit/phpunit" : "^10.5.38",
        "friendsofphp/php-cs-fixer": "^v3.65.0",
        "phpstan/phpstan": "^2.0.2",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0.1",
        "phpstan/phpstan-deprecation-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Millipede\\" : "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MillipedeTest\\": "test"
        }
    },
    "bin": [
        "bin/millipede-php"
    ],
    "scripts": {
        "phpcs": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix -vvv --diff --dry-run --allow-risky=yes --ansi",
        "phpcs:fix": "php-cs-fixer fix -vvv --allow-risky=yes --ansi",
        "phpstan": "phpstan analyse -c phpstan.neon --ansi --memory-limit=192M",
        "phpunit": "XDEBUG_MODE=coverage phpunit --coverage-text",
        "test": [
            "@phpunit",
            "@phpstan",
            "@phpcs"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
